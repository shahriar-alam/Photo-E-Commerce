@model ECEntity.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>E-CommerceSite</title>
    <link rel="stylesheet" type="text/css" href="~/css/Homedesign.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/css/test.css">
    <link rel="stylesheet" type="text/css" href="~/css/header.css">
    <link rel="stylesheet" type="text/css" href="~/css/menu.css">
    <link rel="stylesheet" type="text/css" href="~/css/footer.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>

    <header class="header">
        <div>
            <nav>
                <ul class="header_ul">
                    <li><a href="@Url.Action("Home2", "Basic")"><i class="fa fa-home" aria-hidden="true" style="color: white"></i></a></li>
                    <a href="@Url.Action("Index", "Login")"><i class="fa fa-tachometer" aria-hidden="true" style="color: white"></i></a>
                    </li>
                    <li><a href="@Url.Action("Index", "Login")"><i class="fa fa-bar-chart" aria-hidden="true" style="color: white"></i></a></li>
                    <li><a href="@Url.Action("Index", "Login")"><i class="fa fa-sign-out" aria-hidden="true" style="color: white"></i></a></li>
                </ul>
            </nav>
        </div>
    </header>

    <menu class="home">
        <div>
            <nav class="bar">
                <ul></ul>
                <ul>
                    <li><font color="#444141" face="Impact" style="margin:15" size="4"></font></li>
                    <li class="menu_font">
                        <a href="@Url.Action("Home2", "Basic", new { tags = "Nature" } )"><font color="#444141" face="Impact" style="margin:15" size="3"><u>Nature</u></font></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Home2", "Basic", new { tags = "Digital Art" } )"><font color="#444141" face="Impact" style="margin:15" size="3"><u>Digital Art</u></font></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Home2", "Basic", new { tags = "Film & Animation" } )"><font color="#444141" face="Impact" style="margin:15" size="3"><u>Film & Animation</u></font></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Home2", "Basic", new { tags = "Design" } )"><font color="#444141" face="Impact" style="margin:15" size="3"><u>Design</u></font></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Home2", "Basic", new { tags = "Cartoon" } )"><font color="#444141" face="Impact" style="margin:15" size="3"><u>Cartoon</u></font></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Home2", "Basic", new { tags = "Anime" } )"><font color="#444141" face="Impact" style="margin:15" size="3"><u>Anime</u></font></a>
                    </li>
                    <hr>
                </ul>
            </nav>
        </div>
    </menu>

    <section>
        <div class="wrapper">
            <div id="login-form">
                <form method="post">
                    <fieldset>
                        <legend>Login</legend>
                        <div id="login-input">
                            <input type="Text" name="UserName" maxlength="30" placeholder="User Name" /><br>
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                            <input type="Password" name="Password" maxlength="50" placeholder="Password" />

                        </div>
                        <hr>

                        <button type="Submit" name="signin">Sign in</button>
                        <br>
                        <input type="button" class="" value="Signup" onclick="location.href='@Url.Action("Create", "Signup")'" />
                    </fieldset>
                </form>
            </div>
        </div>
    </section>

    <footer style="clear: both">
        <div class="left_footer" style="text-align: right">
            <font face="Arial Black" color="white" style="margin:5; font-size: 15">&copy;COPYRIGHT</font>
        </div>

        <div class="right_footer">
            <img src="~/Icon/facebook.png" height="30px" width="30px" style="margin:15">
            <img src="~/Icon/google.png" height="30px" width="30px" style="margin:15">
            <img src="~/Icon/twitter.png" height="30px" width="30px" style="margin:15">
        </div>
    </footer>
</body>
</html>
